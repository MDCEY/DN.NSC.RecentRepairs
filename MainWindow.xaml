<mah:MetroWindow x:Class="DN.NSC.RecentRepairs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:DN.NSC.RecentRepairs"
        mc:Ignorable="d"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        WindowStartupLocation="CenterScreen"
        Title="Recent Repairs" Height="450" Width="800">
    <Window.Resources>
        <local:ViewModel x:Key="ViewModel"/>
    </Window.Resources>
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
	            <TextBlock Text="Kieran Wynne" VerticalAlignment="Center" Margin="0 0 4 0"/>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
	<Grid DataContext="{Binding Source={StaticResource ViewModel}}">
        <Grid.ColumnDefinitions>
			<ColumnDefinition Width="1.15*"/>
			<ColumnDefinition Width="5"/>
			<ColumnDefinition Width="3.8*"/>
		</Grid.ColumnDefinitions>
		<DataGrid Grid.Column="2"  MinHeight="200" ItemsSource="{Binding Repairs}" IsReadOnly="True" />
		<DataGrid Grid.Column="0"  ItemsSource="{Binding TotalRepairs}" IsReadOnly="True"/>
	</Grid>
	
</mah:MetroWindow>
